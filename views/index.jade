extends layout

block content

    .container
        .row

            .col-sm-12
                .well
                    if messages.length > 0
                        .alert.alert-success.alert-dismissable= messages
                            button(type="button" class="close" data-dismiss="alert" aria-hidden="true") &times;

                    h2 Add Ticket

                    form(action="/" method="post")

                        .form-group
                            input(type="text", placeholder="ticket" name="title" class="form-control")
                        .form-group
                            input(type="text", placeholder="Your email" name="email" class="form-control")
                        .form-group
                            textarea(rows="5" placeholder="ticket Description" name="details" class="form-control")
                        .form-group
                            input(type="submit", value="submit" class=" btn btn-primary")

            .col-sm-12
                .well
                    h2 FAQ


