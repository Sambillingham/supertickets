extends layout

block content

    .container
        .row

            .col-sm-6
                .well
                    if messages.length > 0
                        .alert.alert-success.alert-dismissable= messages
                            button(type="button" class="close" data-dismiss="alert" aria-hidden="true") &times;

                    h2 Add Items here

                    form(action="/" method="post")

                        .form-group
                            input(type="text", placeholder="item name" name="name" class="form-control")
                        .form-group
                            input(type="text", placeholder="item description" name="desc" class="form-control")
                        .form-group
                            input(type="text", placeholder="value" name="value" class="form-control")
                        .form-group
                            input(type="submit", value="submit" class=" btn btn-primary")

            .col-sm-6
                h1 Dashboard

