extends layout

block content

    .container
        .row
            .col-sm-12.col-md-8.col-md-offset-2
                h1 Supertickets

            .col-sm-12
                .well
                    if messages.length > 0
                        .alert.alert-success.alert-dismissable= messages
                            button(type="button" class="close" data-dismiss="alert" aria-hidden="true") &times;

                    h2 Add Ticket

                    form(action="/" method="post")

                        .form-group
                            input(type="text", placeholder="ticket" name="title" class="form-control")
                        .form-group
                            textarea(rows="5" placeholder="ticket Description" name="details" class="form-control markdown-textarea" data-toggle="popover" title="Markdown Enabled" data-content="You can use any markdown in here, visit <a href='#'>Markdown website</a> for more details")
                        .row
                            .col-xs-12.col-sm-6
                                .form-group
                                    input(type="email", placeholder="Your email" name="email" class="form-control")
                            .col-xs-12.col-sm-6
                                .form-group
                                    input(type="submit", value="submit" class=" btn btn-primary form-control")

            .col-sm-12
                .well
                    h2 FAQ


